<UserControl x:Class="FileOrganizer.View.UIFrames.Footer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FileOrganizer.View.UIFrames"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      HorizontalAlignment="Stretch">

    <Grid Height="20" Background="#888888">
        <StackPanel DataContext="{StaticResource VModel}">
            <TextBlock Text="{Binding FooterText}" Foreground="WhiteSmoke"/>
        </StackPanel>
    </Grid>
</UserControl>
