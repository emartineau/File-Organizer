<Page x:Class="FileOrganizer.View.FileView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FileOrganizer.View"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="FileView">
    <Page.Resources>
        <StaticResource x:Key="FUConverter" ResourceKey="FileUriCoverter"/>
        <StaticResource x:Key="VM" ResourceKey="VModel"/>
    </Page.Resources>
    <Grid Background="SteelBlue">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <MediaElement x:Name="FileDisplay" Source="{Binding Source={StaticResource VModel}, Path=CurrentFile, Converter={StaticResource FileUriCoverter}}"/>
    </Grid>
</Page>
