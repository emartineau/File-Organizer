<Page x:Class="FileOrganizer.View.FileView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FileOrganizer.View"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="FileView">
    <Grid Background="#333333">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Frame Grid.Row="0" Grid.ColumnSpan="2" Source="UIFrames/Toolbar.xaml"/>
        <Frame Grid.Row="1" Grid.Column="0" Source="FileButtonView.xaml"/>
        <Frame Grid.Row="1" Grid.Column="1" Source="UIFrames/FileDisplay.xaml"/>
        <Frame Grid.Row="2" Grid.ColumnSpan="2" Source="UIFrames/Footer.xaml"/>
    </Grid>
</Page>
